<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/mnAMT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/border"
            android:hint="Amount"
            android:inputType="number"
            android:padding="8.0dip" />

        <EditText
            android:id="@+id/mnMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border"
            android:hint="Mode"
            android:padding="8.0dip" />

        <EditText
            android:id="@+id/mnTrid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border"
            android:hint="Transaction ID"
            android:padding="8.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/in_time"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_weight="7.0"
                android:background="@drawable/border"
                android:focusable="false"
                android:hint="Transaction Date"
                android:padding="8.0dip" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="0.0dip"
                android:layout_height="35.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/btn_gradient"
                android:text="PICK DATE"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40.0dip"
            android:background="@drawable/border"
            android:text="submit"
            android:textColor="@color/white" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="13.0dip"
            android:background="@color/edit_text_color" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.0dip"
            android:drawableLeft="@drawable/ic_bank"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center_vertical"
            android:selectAllOnFocus="true"
            android:text="Zelenor Solutions Private Limited"
            android:textIsSelectable="true"
            android:textSize="@dimen/activity_vertical_margin" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_credit_card"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center_vertical"
            android:selectAllOnFocus="true"
            android:text="\ 918020092255236"
            android:textIsSelectable="true"
            android:textSize="@dimen/activity_vertical_margin" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4.0dip"
                android:src="@drawable/ic_axisbank" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:selectAllOnFocus="true"
                android:text="AXIS BANK"
                android:textIsSelectable="true"
                android:textSize="@dimen/activity_vertical_margin" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:selectAllOnFocus="true"
                android:text="UTIB0001963"
                android:textIsSelectable="true"
                android:textSize="@dimen/activity_vertical_margin" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_address"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center_vertical"
            android:selectAllOnFocus="true"
            android:text="THANE"
            android:textIsSelectable="true"
            android:textSize="@dimen/activity_vertical_margin" />
    </LinearLayout>
</ScrollView>