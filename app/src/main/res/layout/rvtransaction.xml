<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16">

        <ImageView
            android:id="@+id/trstatus"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="start"
            android:layout_marginLeft="-1.0dip"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_minusl" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="6.5"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="ID: 1545675304"
                android:textColor="#ff304073"
                android:textSize="12.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:maxLength="15"
                android:text="ID: 1545675304"
                android:textColor="#ff6783b8"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_weight="6.0"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tramt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit: Rs 300000"
                android:textColor="#ff304073"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:maxLength="15"
                android:text="Info: Rs 3000"
                android:textColor="#ff6783b8"
                android:textSize="12.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/trmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="4.0dip"
            android:src="@drawable/ic_more_horiz" />
    </LinearLayout>
</android.support.v7.widget.CardView>