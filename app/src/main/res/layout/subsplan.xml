<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="@dimen/margin_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#03A9F4">

            <TextView
                android:id="@+id/planType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="Premium"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="top"
                    android:textColor="@color/white"
                    android:text=" â‚¹ "/>

                <TextView
                    android:id="@+id/subPlanamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textStyle="bold"
                    android:textColor="#ffe385"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/subPlantype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text=" / Plan Type"/>

            </LinearLayout>




        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="-18dp"
            app:cardBackgroundColor="#ffe385">

            <TextView
                android:id="@+id/subPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Plan Name"/>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/subPlanDescription"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="@dimen/margin_10" />
        <android.support.v7.widget.CardView
            android:id="@+id/alSubscribed"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="@dimen/margin_10"
            android:visibility="gone"
            android:layout_gravity="center"
            app:cardBackgroundColor="#62ddae">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Already Subscribed"/>



        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/subPlanOrder"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="@dimen/margin_10"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cardBackgroundColor="#F44336">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Order Now"/>



        </android.support.v7.widget.CardView>

    </LinearLayout>





</android.support.v7.widget.CardView>