<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="@dimen/margin_16"
            android:text="Transaction Detail"
            android:textColor="#ff515365" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ffc2c5d9" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="2">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/margin_16"
                    android:text="Amount"
                    android:textColor="#ff6783b8"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dgamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#ff304073" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="13.0dip"
                    android:text="Before Transaction"
                    android:textColor="#ff6783b8"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dgbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#ff304073" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="13.0dip"
                    android:text="After Transaction"
                    android:textColor="#ff6783b8"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dgat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#ff304073" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/margin_16"
                    android:text="Surcharge"
                    android:textColor="#ff6783b8"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dgsur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#ff304073" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/margin_16"
                    android:text="Description"
                    android:textColor="#ff6783b8"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dgdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#ff304073" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="@dimen/margin_16"
                    android:text="Date"
                    android:textColor="#ff6783b8" />

                <TextView
                    android:id="@+id/dgdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#ff304073" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/dgclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_16"
            android:text="close"
            android:textColor="@color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>