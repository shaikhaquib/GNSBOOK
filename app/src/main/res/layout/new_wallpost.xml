<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4.0dip"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginRight="4.0dip"
    card_view:cardCornerRadius="7.0dip">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/componyLogo"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:layout_gravity="center_vertical"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/text_uopload"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        android:layout_marginRight="8.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/edt_rounded_corner"
        android:fontFamily="@font/sourcesanspro_regular"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Share what you are thinking " />

    <ImageView
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_gravity="center"
        android:src="@drawable/ic_menu_gallery"
        android:tint="@color/colorPrimary" />
</LinearLayout>