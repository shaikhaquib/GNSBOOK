<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/benCard"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip">

        <ImageView
            android:id="@+id/gmailitem_letter"
            android:layout_width="55.0dip"
            android:layout_height="55.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_vertical_margin" />

        <LinearLayout
            android:id="@+id/benlayout"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_weight="7.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/beName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Aquib"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_vertical_margin" />

            <TextView
                android:id="@+id/beIfsc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.0"
                android:text="SBIN0017185"
                android:textColor="#ff757575" />

            <TextView
                android:id="@+id/beAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6.0"
                android:text="\ 84259186852211"
                android:textColor="#ff757575" />

            <TextView
                android:id="@+id/beMobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6.0"
                android:text="\ 8425918611"
                android:textColor="#ff757575" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/bendelit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@android:drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>