<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.digital.gnsbook.Activity.Become_Premium">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prBnr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/landing_bg"
                android:tint="#38050000"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                android:background="@drawable/landing_bg">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="31.0dip"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Become premium Member"
                    android:textColor="@color/white"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Purchase a product from our partner companies given below and start getting paid for every sale from your friend circle."
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/margin_16"
                    android:src="@drawable/account_bottom" />
            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white">

                <ImageView
                    android:padding="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_filter"
                    android:layout_gravity="end|center_vertical" />
                <TextView
                    android:padding="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_filter"
                    android:text="Filter Your Result"
                    />

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bg"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/atscartback" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-50dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/cdp"
                                android:layout_width="80.0dip"
                                android:layout_height="80.0dip"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_atscart"
                                app:civ_border_color="@color/borderline"
                                app:civ_border_width="1.0dip" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8.0dip"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_16"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/cName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:text="ATS CART" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/batchclose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:background="@drawable/edt_rounded_corner"
                                    android:backgroundTint="@color/nav_textcolor"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/margin_10"
                                    android:paddingTop="2dp"
                                    android:paddingRight="@dimen/margin_10"
                                    android:paddingBottom="2dp"
                                    android:text=" Business Friend"
                                    android:textColor="#FFFFFF"
                                    android:visibility="gone" />


                                <TextView
                                    android:id="@+id/cDesc"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4.0dip"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:text="ATSCart is a online shopping website where you get variety of products available on one platform."
                                    android:textSize="@dimen/fragment_title_padding_12" />
                            </LinearLayout>


                            <android.support.v7.widget.CardView
                                android:id="@+id/prdBuy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:cardCornerRadius="4dp"
                                android:onClick="select"
                                android:layout_marginTop="@dimen/font_20sp"

                                android:layout_alignParentRight="true"
                                app:cardBackgroundColor="#E64A19">

                                <TextView
                                    android:id="@+id/btnText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="6dp"
                                    android:text="Start Shopping"
                                    android:layout_margin="2dp"
                                    android:textSize="12dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"/>

                            </android.support.v7.widget.CardView>



                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_coming_soon"
                                 />




                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
