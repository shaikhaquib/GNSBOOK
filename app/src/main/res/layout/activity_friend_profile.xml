<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profilefrgScroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/prBanner"
            android:layout_width="fill_parent"
            android:layout_height="199.5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/borderline"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/pr"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="150.0dip"
            android:layout_height="150.0dip"
            android:src="@drawable/photo">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/prDP"
                android:layout_width="150.0dip"
                android:layout_height="150.0dip"
                android:layout_centerInParent="true"
                android:layout_margin="8.0dip"
                android:src="@drawable/photo"
                app:civ_border_color="@color/borderline"
                app:civ_border_width="1.0dip" />




        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12.0dip"
            android:layout_marginEnd="12.0dip"
            android:layout_marginBottom="30.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:text="User Name"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prcity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="Sofware Engineer"
                android:textSize="12.0sp" />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16">



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                    <ImageView
                        android:id="@+id/fabaddfreind"
                        android:tint="#444950"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_addfreind"
                        android:visibility="gone"
                        android:background="@drawable/circle_back" />


                    <ImageView
                        android:id="@+id/fabremoove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_back"
                        android:tint="#444950"
                        android:visibility="gone"
                        android:src="@drawable/ic_happyface_minus" />
                <ImageView
                        android:id="@+id/fabfriend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_back"
                        android:tint="#444950"
                        android:visibility="gone"
                        android:src="@drawable/ic_friend" />




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fabChat"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_chaticon"
                    android:background="@drawable/circle_back" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fababout"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_more_horiz"
                    android:tint="#444950"
                    android:background="@drawable/circle_back" />

            </RelativeLayout>


        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/accesptrequestUi"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/font_15sp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/fabAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/font_20sp"
                app:cardBackgroundColor="#FF7043">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:text="Confirm"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:src="@drawable/ic_settings_icon"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/fabReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="@dimen/font_20sp"
                android:layout_marginRight="@dimen/margin_16"
                app:cardBackgroundColor="#FFCCBC">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="Delete"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:src="@drawable/ic_settings_icon"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvprofile_wire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>